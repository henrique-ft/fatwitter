.tweet-row{
    margin: 1em 0;
}

.tweet-col{
    padding: 0px;
}

.tweet-col .card-footer a{
    margin-right: 1em;
    color: #717171 !important;
}

.tweet-col .card-footer a.active{
    color: #4b9bd4 !important;
}

.tweet-col .card-footer a:hover{
    color: #4b9bd4 !important;
    text-decoration: none;
}


.followers-card {
    padding-top: 10px;
    font-size: 0.8em;
    color: gray;
}

#followers-number, #following-number {
    color: black;
    font-weight: bold;
}
